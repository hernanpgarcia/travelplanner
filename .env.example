# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/travelplanner
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Google APIs (Get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Application Configuration
ENVIRONMENT=development
DEBUG=true
APP_NAME=TravelPlanner

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Railway Configuration (for production)
RAILWAY_ENVIRONMENT=development

# Optional: Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Optional: SendGrid for email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@travelplanner.com

# Development Tools
ENABLE_DOCS=true
LOG_LEVEL=info